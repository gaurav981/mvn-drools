<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>mortgages</groupId>
  <artifactId>mortgages</artifactId>
  <version>0.0.1</version>
  <packaging>jar</packaging> 
  <scm>
    <url>https://github.com/gaurav981/mvn-drools</url>
    <connection>scm:git:https://github.com/gaurav981/mvn-drools</connection>
    <developerConnection>scm:git:https://github.com/gaurav981/mvn-drools</developerConnection>
  </scm>
  <build>
    <plugins>
      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-scm-plugin</artifactId>
            <version>1.9.4</version>
        <configuration>
          <username>gaurav981</username>
          <password>Gaur9811</password>
          <basedir>./</basedir>
        </configuration>
        <executions>
	 <execution>
            <id>perform-checkout</id>
                <phase>initialize</phase>
            <goals>
		<goal>checkout</goal>
            </goals>
            <configuration>
                <basedir>./</basedir>
                <includes>./*</includes>
            </configuration>
         </execution>
	 <execution>
            <id>perform-add</id>
                <phase>initialize</phase>
            <configuration>
                <basedir>./</basedir>
		<includes>*,*/*</includes>
		<workingDirectory>./</workingDirectory>
            </configuration>
            <goals>
		<goal>add</goal>
            </goals>
         </execution>
         <execution>
            <id>perform-checkin</id>
                <phase>generate-sources</phase>
            <goals>
		<goal>checkin</goal>
            </goals>
            <configuration>
                <basedir>./</basedir>
                <includes>*,./project/*</includes>
                <message>testing</message>
            </configuration>
         </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
